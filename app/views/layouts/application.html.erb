<!DOCTYPE html>
<html>
  <head>
    <title>N&oslash;skvabbel</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>
	<body>
		<div class="navbar navbar-fixed-top">
		  <div class="navbar-inner">
		    <div class="container">
					<ul class="nav">
						<% if current_user %>
					  <li>
					    <%= link_to 'N&oslash;skvabbel'.html_safe, '/', :class => "brand" %>
					  </li>

						<li><%= t('.hi') %><span class="<%= gender(current_user) %>"> <%= current_user.username %>!</span></li>
						<li>
							<% if current_user.couple %>
								<%= t('.in_couple_with') %> <span class="<%= gender(other_mate_in_couple_with(current_user)) %>">
								<%= other_mate_in_couple_with(current_user).username %></span>.
							<% else %>
	      				<%= t('.not_in_couple_yet') %>
							<% end %>
						</li>
						<li><%= link_to t('.account'), account_path %></li>
						<li class="divider-vertical"></li>
						<li><%= link_to t('.logout'), logout_path %></li>
						<% else %>
						<li>
							<%= link_to 'N&oslash;skvabbel'.html_safe, '/', :class => "brand" %>
						</li>
						<li><%= link_to t('.tagline'), '/' %></li>
						<% end %>
					</ul>
		    </div>
		  </div>
		</div>

		<%= render :partial => 'shared/flash'%>

		<div class="container">
			<div class="row-fluid">
				<div class="span12">
				<%= yield %>
				</div>
			</div>
		</div>

	</body>
</html>
