<!DOCTYPE html>
<html>
	<head>
  	<title>N&oslash;skvabbel</title>
	  <%= stylesheet_link_tag :all %>
	  <%= javascript_include_tag :defaults %>
	  <%= csrf_meta_tag %>
	</head>
	<body>
		
		<% if flash[:notice] %>
			<p id="flash" title="click to close" onclick="this.shrink();"><%= flash[:notice] %></p>
		<% end %>
		
		<div id="container">

			<div id="header">

				<h1 id="application">N&oslash;skvabbel</h1>
				
				<h3>&nbsp;- 
				<% if current_user %>
					Hi <span class="<%= gender(current_user) %>"> <%= current_user.username %></span>!
					<% if current_user.couple %>
						You're in couple with <span class="<%= gender(other_mate_in_couple_with(current_user)) %>"><%= other_mate_in_couple_with(current_user).username %></span>.
					<% else %>
      			Not in couple yet? Don't worry.
					<% end %>
				<% else %>
					Sharing expenses in a couple should be easy
				<% end %>
				</h3>
				
				<% if current_user %>
					<div id="account">
						<%= link_to 'Logout', logout_path %>
					</div>
				<% end %>
			
			</div>
			
			<div id="content">
				<%= yield %>
			</div>

		</div>
	
	</body>
</html>
