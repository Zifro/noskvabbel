<!DOCTYPE html>
<html>
	<head>
  	<title>N&oslash;skvabbel</title>
	  <%= stylesheet_link_tag :all %>
	  <%= javascript_include_tag :defaults %>
	  <%= csrf_meta_tag %>
	</head>
	<body>
		
		<% if flash[:notice] %>
			<p id="flash" title="click to close" onclick="this.shrink();"><%= flash[:notice] %></p>
		<% end %>
		
		<div id="content">

			<h1 id="application">N&oslash;skvabbel</h1>
			<% if current_user %>
				<h3><%= greet_message_for(current_user) %>
			<% else %>
				<h3 id="tagline">&nbsp;- Sharing expenses in a couple should be easy</h3>
			<% end %>
			<div id="account">
				<%= link_to 'Logout', logout_path %>
			</div>
			
			<%= yield %>

		</div>
	
	</body>
</html>
