<ul id="title_and_actions">
	<li id="title"><%= t('.list') %> - </li>
	<li><%= link_to t('.record_new_expense'), new_expense_path %></li>
</ul>

<% if @expenses.any? %>
<table id="expenses">
	<tr>
		<th><%= t('.when') %></th>		
		<th><%= t('.what') %></th>
		<th><%= t('.how_much') %></th>
		<th><%= t('.who') %></th>
		<th><%= t('.actions') %></th>
	</tr>
	<tr class="balance" id="balance_user_1">
		<%= render :partial => 'balance_user_1' %>
	</tr>
	<tr class="balance user_2" id="balance_user_2">
		<%= render :partial => 'balance_user_2' %>
	</tr>
	<% @expenses.each do |exp| %>
	<tr id="expense_<%= exp.id %>" class="<%= gender(exp.user) %>">
		<td><%= exp.spent_on %></td>
		<td><%= exp.label %></td>
		<td><%= number_to_currency(exp.amount, :unit => 'â‚¬ ', :separator => ',', :delimiter => ' ') %></td>
		<td><%= exp.user.username %></td>
		<td>
			<%= link_to t('.details'), expense_path(exp), remote: true, id: "details_for_#{exp.id}" %>,
			<%= link_to t('.edit'), edit_expense_path(exp) %> or
			<%= link_to t('.delete'), exp, :confirm => t('.confirm_delete'), :remote => true, :method => :delete %>
		</td>
	</tr>
	<% end %>
<% else %>
	t('.none_yet') <%= link_to t('.new_one'), new_expense_path %> ?
<% end %>