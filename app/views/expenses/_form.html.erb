<%= form_for(@expense) do |f| %>
  <%= f.label :label, t('.label') %> <%= f.text_field :label %>
  <br/>
  <%= f.label :amount, t('.amount') %> <%= f.text_field :amount %>
  <br/>
	<%= f.label :user_id, t('.who') %> <%= f.select :user_id, options_for_select(current_user) %>
	<br/>
  <%= f.label :spent_on, t('.date') %> <%= f.date_select :spent_on, :order => [:year, :month, :day] %>
  <br/>
  <%= f.submit t("expenses.#{params[:action]}.record_button") %> <%= t("expenses.#{params[:action]}.or") %> <%= link_to t("expenses.#{params[:action]}.cancel"), expenses_path %>
<% end %>
