<p>Provide the following information to record a new expense</p>
<br />
<% if @expense.errors.any? %>
<p id="errors">
	The following errors prevented you from recording this expense
	<ul>
		<% @expense.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
</p>
<% end %>
<%= form_for(@expense) do |f| %>

  <%= f.label :label %> <%= f.text_field :label %>
  <br/>
  <%= f.label :amount %> <%= f.text_field :amount %>
  <br/>
	<%= f.label :who %> <%= f.select :user_id, options_for_select(current_user) %>
	<br
  <%= f.label :date %> <%= f.text_field :spent_on %>
  <br/>
  <%= f.submit 'Record' %> or <%= link_to 'cancel', expenses_path %>
  
<% end %>