<p>Please edit the following expense details at your will, then press Update</p>
<br />
<% if @expense.errors.any? %>
<p id="errors">
	The following errors prevented you from updating this expense
	<ul>
		<% @expense.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
</p>
<% end %>
<%= form_for(@expense) do |f| %>

  <%= f.label :label %> <%= f.text_field :label %>
  <br/>
  <%= f.label :amount %> <%= f.text_field :amount %>
  <br/>
  <%= f.label :date %> <%= f.text_field :spent_on %>
  <br/>
  <%= f.submit 'Update' %> or <%= link_to 'cancel', expenses_path %>
  
<% end %>