<p><%= t('.provide_info_to_update_expense') %></p>
<br />
<% if @expense.errors.any? %>
<p id="errors">
	The following errors prevented you from updating this expense
	<ul>
		<% @expense.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
</p>
<% end %>
<%= form_for(@expense) do |f| %>

  <%= f.label :label, t('.label') %> <%= f.text_field :label %>
  <br/>
  <%= f.label :amount, t('.amount') %> <%= f.text_field :amount %>
  <br/>
	<%= f.label :user_id, t('.who') %> <%= f.select :user_id, options_for_select(current_user) %>
	<br/>
  <%= f.label :spent_on, t('.date') %> <%= f.date_select :spent_on %>
  <br/>
  <%= f.submit t('.record_button') %> <%= t('.or') %> <%= link_to t('.cancel'), expenses_path %>
  
<% end %>